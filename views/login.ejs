<header>
  <!-- Top navigation -->
  <nav id="top-nav">
    <div class="nav-container">
      <div class="actions">
        <a href="/login" class="login">Iniciar sesión</a>
        <a href="/signup" class="signup">Crear cuenta</a>
      </div>
    </div>
  </nav>

  <!-- Main navigation -->
  <nav id="main-nav">
    <div class="main-container">
      <div class="main-content">
        <!-- logo fullstock -->
        <a href="/"
          ><img class="Logo" src="/images/Logo.png" alt="logo fullstock"
        /></a>
        <!-- botones de navegacion -->
        <nav class="nav">
          <!-- Productos NAV -->
          <% categories.forEach((category) => { %>
          <a href="/categories/<%=category.id%>" class="navItem"
            ><%=category.name%></a
          >
          <% }); %>
          <a href="#footer" class="navItem">Compañia</a>
        </nav>

        <!-- botones derecha -->
        <div class="frame9">
          <div class="frame8">
            <a class="Button-Search">
              <img
                class="button-search"
                src="/images/Button-Search.png"
                alt="button search"
              />
            </a>
            <a href="/login" class="Button-login">
              <img
                class="button login"
                src="/images/Button-login.png"
                alt="button login"
              />
            </a>
          </div>
          <div class="vector1">|</div>
          <a href="/cart" class="button">
            <img
              class="shooping-cart"
              src="/images/Button-shop.png"
              alt="boton de carrito de compras"
            />
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>
<section class="login-section">
  <div class="content">
    <div class="frame72">
      <h2 class="login-h2">Inicia sesión en tu cuenta</h2>

      <!-- Form to login  -->
      <form action="" method="post" class="login-email">
        <label for="login-email">Correo electrónico</label>
        <input
          type="email"
          id="login-email"
          name="email"
          class="input-email"
          required
        />

        <label for="login-password">Contraseña</label>
        <input
          type="password"
          id="login-password"
          name="password"
          class="input-password"
          required
        />
      </form>

      <!-- Button to log in -->
      <button class="login-button">Iniciar sesión</button>
      <div class="frame73">
        <p class="login-nocount">¿Aún no tienes cuenta?</p>
        <a href="/signup"><p class="login-creatcount">Crea una cuenta</p></a>
      </div>
    </div>
  </div>
</section>
