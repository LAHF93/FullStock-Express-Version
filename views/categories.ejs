<header>
  <!-- Top navigation -->
  <nav id="top-nav">
    <div class="nav-container">
      <div class="actions">
        <a href="/login" class="login">Iniciar sesión</a>
        <a href="/signup" class="signup">Crear cuenta</a>
      </div>
    </div>
  </nav>

  <!-- Main navigation -->
  <nav id="main-nav">
    <div class="main-container">
      <div class="main-content">
        <!-- logo fullstock -->
        <a href="/"
          ><img class="Logo" src="/images/Logo.png" alt="logo fullstock"
        /></a>
        <!-- botones de navegacion -->
        <nav class="nav">
          <!-- Productos NAV -->
          <% categories.forEach((category) => { %>
          <a href="/categories/<%=category.id%>" class="navItem"
            ><%=category.name%></a
          >
          <% }); %>
          <a href="#footer" class="navItem">Compañia</a>
        </nav>

        <!-- botones derecha -->
        <div class="frame9">
          <div class="frame8">
            <a class="Button-Search">
              <img
                class="button-search"
                src="/images/Button-Search.png"
                alt="button search"
              />
            </a>
            <a href="/login" class="Button-login">
              <img
                class="button login"
                src="/images/Button-login.png"
                alt="button login"
              />
            </a>
          </div>
          <div class="vector1">|</div>
          <a href="/cart" class="button">
            <img
              class="shooping-cart"
              src="/images/Button-shop.png"
              alt="boton de carrito de compras"
            />
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>
<section class="categories1">
  <div class="categories1-content">
    <div class="wrapper">
      <h2 class="wrapper-h2"><%=category.name%></h2>
      <p class="wrapper-p"><%=category.description%></p>
    </div>
  </div>
</section>
<section class="categories2">
  <div class="categories2-content">
    <div class="frame28">
      <div class="frame39">
        <h2 class="price">Precio</h2>
        <div class="frame71">
          <div class="input-group">
            <label for="min">Min</label>
            <input type="number" id="min" name="min" />
          </div>

          <div class="input-group">
            <label for="max">Max</label>
            <input type="number" id="max" name="max" />
          </div>
        </div>
      </div>
      <button class="button-filter">Filtrar Productos</button>
    </div>
    <div class="frame34">
      <div class="frame29">
        <!-- Productos -->
        <% products.forEach((product) => { %>
        <div class="product-card">
          <a href="/products/<%=product.id%>"
            ><img src="<%=product.imageURL%>" alt="<%=product.name%>" />
            <div class="frame32">
              <h2 class="frame32-h2"><%=product.name%></h2>
              <p class="frame32-p"><%=product.description%></p>
              <p class="frame32-d">$<%=product.price%></p>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>
<footer id="footer" class="Footer">
  <div class="footer-content">
    <div class="frame10">
      <div class="frame24">
        <!-- Tienda -->
        <div class="frame16">
          <h2 class="tienda">Tienda</h2>
          <div class="frame20">
            <h2 class="polos">Polos</h2>
            <h2 class="tazas">Tazas</h2>
            <h2 class="stickers">Stickers</h2>
          </div>
        </div>

        <!-- Compañía -->
        <div class="frame16">
          <h2 class="compania">Compañía</h2>
          <div class="frame20">
            <h2 class="quienes-somos">Quiénes somos</h2>
            <h2 class="terminos-condiciones">Términos y condiciones</h2>
            <h2 class="privacidad">Privacidad</h2>
          </div>
        </div>

        <!-- Conecta -->
        <div class="frame17">
          <h2 class="conecta">Conecta</h2>
          <div class="frame20">
            <h2 class="contactanos">Contáctanos</h2>
            <h2 class="facebook">Facebook</h2>
            <h2 class="instagram">Instagram</h2>
          </div>
        </div>
      </div>

      <!-- Suscripción -->
      <div class="frame21">
        <h2 class="suscribete">Suscríbete a nuestro boletín</h2>
        <p class="ultimas-ofertas">
          Recibe las últimas ofertas y descuentos en tu correo semanalmente.
        </p>
        <form
          class="frame23"
          action="subscribirse"
          method="post"
          onsubmit="event.preventDefault()"
        >
          <input class="input email" type="email" name="email" />
          <button class="subscribirse butt" type="submit">Subscribirse</button>
        </form>
      </div>
    </div>

    <div class="copyright">
      <p class="p-copyright">Todos los derechos reservados © Full Stock</p>
    </div>
  </div>
</footer>
